{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/:path((?!.*\\.).*)",
        "destination": "/:path.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "cors": "cors.json"
  },
  "firestore": {
    "rules": "intranet/firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
